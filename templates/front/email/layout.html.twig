{% block body %}
    {% autoescape false %}
        {% set homepageUrl = url('app_home') %}
        {% set logo = absolute_url(asset('assets/front/images/logo-black.png')) %}

        <div style="font-family: sans-serif; background: #eee; padding-top: 30px; padding-bottom: 30px; font-size: 16px; color: #333; line-height: 1.5">
            <div style="max-width: 600px; margin: 20px auto;">
                <div style="margin-bottom: 30px; text-align: center;">
                    <a href="{{ homepageUrl|raw }}">
                        <img src="{{ logo }}" alt="{{ website_title }}" style="width: 170px">
                    </a>
                </div>

                <div style="background: #fff; padding: 40px 30px;">
                    {% block content %}{% endblock %}
                </div>

                <div style="text-align: center; padding: 20px 0;">
                    <a href="{{ homepageUrl|raw }}" target="_blank" style="color: #6967CE; text-decoration: none;">{{ app.request.getSchemeAndHttpHost() }}</a>
                </div>
            </div>
        </div>
    {% endautoescape %}
{% endblock %}