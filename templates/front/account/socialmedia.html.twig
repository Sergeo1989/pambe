{% extends 'front/account/index.html.twig' %}

{% block title %}{{ 'Réseaux sociaux - '~ parent() }}{% endblock %}

{% block account_content %}
    <div class="user-listing-detail-wrap">
        {% embed "front/partials/professional/edit/breadcrumb.html.twig" %}
            {% block breadcrumb_coordonnee %}
                <a class="active" href="javascript:void(0)">Médias sociaux</a>
            {% endblock %}
        {% endembed %}
        <div class="block-card mb-3">
            <div class="block-card-header">
                <h2 class="widget-title pb-0">Réseaux sociaux</h2>
            </div>
            <div class="block-card-body">
                {% for message in app.flashes("success") %}
                    <div class="alert alert-success alert-dismissible font-size-15 text-color" role="alert">
                        <span class="font-weight-semi-bold">{{ message }}</span>
                    </div>
                {% endfor %}
                {{ form_start(socialForm, {'method': 'post', 'attr': {'class': 'form-box row'} }) }}
                    <div class="col-lg-12">
                        <div class="input-box">
                            <label class="label-text">{{ 'global.facebook_link'|trans }}</label>
                            <div class="form-group">
                                <span class="la la-facebook-f form-icon"></span>
                                {{ form_widget(socialForm.socialUrl.facebook, {'required': false, 'attr': {'class': 'form-control', 'placeholder': 'https://'} }) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="input-box">
                            <label class="label-text">{{ 'global.twitter_link'|trans }}</label>
                            <div class="form-group">
                                <span class="la la-twitter form-icon"></span>
                                {{ form_widget(socialForm.socialUrl.twitter, {'required': false, 'attr': {'class': 'form-control', 'placeholder': 'https://'} }) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="input-box">
                            <label class="label-text">{{ 'global.instagram_link'|trans }}</label>
                            <div class="form-group">
                                <span class="la la-instagram form-icon"></span>
                                {{ form_widget(socialForm.socialUrl.instagram, {'required': false, 'attr': {'class': 'form-control', 'placeholder': 'https://'} }) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="input-box">
                            <label class="label-text">{{ 'global.whatsapp_link'|trans }}</label>
                            <div class="form-group">
                                <span class="la la-whatsapp form-icon"></span>
                                {{ form_widget(socialForm.socialUrl.whatsapp, {'required': false, 'attr': {'class': 'form-control', 'placeholder': 'https://'} }) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="input-box">
                            <label class="label-text">{{ 'global.pinterest_link'|trans }}</label>
                            <div class="form-group">
                                <span class="la la-pinterest form-icon"></span>
                                {{ form_widget(socialForm.socialUrl.pinterest, {'required': false, 'attr': {'class': 'form-control', 'placeholder': 'https://'} }) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="input-box">
                            <label class="label-text">{{ 'global.youtube_link'|trans }}</label>
                            <div class="form-group">
                                <span class="la la-youtube form-icon"></span>
                                {{ form_widget(socialForm.socialUrl.youtube, {'required': false, 'attr': {'class': 'form-control', 'placeholder': 'https://'} }) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="input-box">
                            <label class="label-text">{{ 'global.linkedin_link'|trans }}</label>
                            <div class="form-group">
                                <span class="la la-linkedin form-icon"></span>
                                {{ form_widget(socialForm.socialUrl.linkedIn, {'required': false, 'attr': {'class': 'form-control', 'placeholder': 'https://'} }) }}
                            </div>
                        </div>
                    </div>
                    <div class="submit-wrap pt-3">
                        <div class="btn-box mt-3 ml-3">
                            {{ form_widget(socialForm.save, {'label': 'global.save'|trans, 'attr': {'class': 'theme-btn gradient-btn border-0'} }) }}
                            {{ form_widget(socialForm.saveAndContinue, {'label': 'global.save_and_continue'|trans, 'attr': {'class': 'theme-btn gradient-btn border-0'} }) }}
                        </div>
                    </div>
                {{ form_end(socialForm) }}
            </div>
        </div>
    </div>
{% endblock %}