{% extends 'front/account/index.html.twig' %}

{% block title %}{{ 'Notifications - '~ parent() }}{% endblock %}

{% block account_content %}
    <div class="user-listing-detail-wrap">
        <div class="block-card mb-3">
            <div class="block-card-header">
                <h2 class="widget-title pb-0">Notifications</h2>
            </div>
            <div class="block-card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="block-card dashboard-card mb-4 px-0 pb-0">
                            <div class="block-card-body">
                                <div class="online-user-box">
                                    <div class="online-user-list">
                                        <div class="generic-list chat-list scrollable-content scrollbar-hidden">
                                            {% for notification in notifications() %}
                                                <a class="generic-list-item d-flex align-items-center" href="{{ path('app_account_notification_show', {id: notification.id}) }}">
                                                    <div class="user-thumb flex-shrink-0 position-relative"></div>
                                                    <div class="ml-2">
                                                        <p class="text-color font-size-14 font-weight-medium">{{ notification.content|capitalize }}</p>
                                                        <p class="small text-gray"><b>{{ website_title }}</b> Â· {{ notification.dateAdd|format_datetime() }} </p>
                                                    </div>
                                                </a>
                                            {% endfor %} 
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}