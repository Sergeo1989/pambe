{% extends 'front/professional/layout.html.twig' %}

{% block title %}{{ 'Catégories populaires - '~ parent() }}{% endblock %} 

{% block pro_breadcrumb %}
    {% embed "front/partials/breadcrumb.html.twig" %}
        {% block breadcrumb_heading %}
            <div class="section-heading">
                <h2 class="sec__title text-white font-size-40 mb-0">Catégories populaires</h2>
            </div>
        {% endblock %}
        {% block breadcrumb_links %}
            <li>Catégories populaires</li>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block pro_content %}
    <section class="category-area section--padding">
        <div class="container">
            {% if categories|length > 0 %}
                <div class="row">
                    {% for category in categories %}
                        {% include "front/partials/professional/category.html.twig" with {"category" : category} %}
                    {% endfor %}
                </div>
                <div class="row">
                    <div class="col-lg-12 pt-3 text-center">
                        {% do categories.setPageRange(4) %}
                        {{ knp_pagination_render(categories, 'front/partials/pagination.html.twig') }}   
                    </div>
                </div>
            {% else %}
                <div class="row">
                    <div class="col-lg-12 pt-3 text-center">
                        Aucune donnée à afficher pour le moment, merci de bien vouloir revenir plutard.  
                    </div>
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}