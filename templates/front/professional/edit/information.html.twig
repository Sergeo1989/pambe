{% extends 'front/layout.html.twig' %}

{% block title %}{{ 'Modification - '~ parent() }}{% endblock %}

{% block content %}
    {% embed "front/partials/breadcrumb.html.twig" %}
        {% block breadcrumb_heading %}
            <div class="section-heading">
                <h2 class="sec__title text-white font-size-40 mb-0">Modification</h2>
            </div>
        {% endblock %}
        {% block breadcrumb_links %}
            <li>Modification</li>
        {% endblock %}
    {% endembed %}
    <section class="add-listing-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 mx-auto">
                    {% embed "front/partials/professional/edit/breadcrumb.html.twig" %}
                        {% block breadcrumb_information %}
                            <a class="active" href="javascript:void(0)">Informations</a>
                        {% endblock %}
                    {% endembed %}
                    <div class="block-card mb-4">
                        <div class="block-card-header">
                            <h2 class="widget-title">Informations générales</h2>
                            <div class="stroke-shape"></div>
                        </div>
                        <div class="block-card-body">
                            {{ form_start(informationForm, {'method': 'post', 'attr': {'class': 'form-box row'} }) }}
                                <div class="col-lg-6">
                                    <div class="input-box">
                                        <label class="label-text">Enregistrez un profil</label>
                                        <div class="file-upload-wrap file-upload-wrap-2 profile">
                                            {{ form_widget(informationForm.profil.imageFile, {'multiple': true, 'attr': {'class': 'file-upload-input with-preview', 'maxlength': '1'} }) }}
                                            <span class="file-upload-text"><i class="la la-photo mr-2"></i>Choisi un fichier</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="input-box">
                                        <label class="label-text">Enregistrez une couverture</label>
                                        <div class="file-upload-wrap file-upload-wrap-2 cover">
                                            {{ form_widget(informationForm.cover.imageFile, {'multiple': true, 'attr': {'class': 'file-upload-input with-preview', 'maxlength': '1'} }) }}
                                            <span class="file-upload-text"><i class="la la-photo mr-2"></i>Choisi un fichier</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="input-box">
                                        <label class="label-text">Votre email</label>
                                        <div class="form-group">
                                            <span class="la la-envelope form-icon"></span>
                                            {{ form_widget(informationForm.user.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrer votre adresse e-mail'} }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="input-box">
                                        <label class="label-text">Votre nom</label>
                                        <div class="form-group">
                                            <span class="la la-user form-icon"></span>
                                            {{ form_widget(informationForm.user.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Entrer votre nom'} }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="input-box">
                                        <label class="label-text">Prénom</label>
                                        <div class="form-group">
                                            <span class="la la-user form-icon"></span>
                                            {{ form_widget(informationForm.user.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Entrer votre prénom'} }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="input-box">
                                        <label class="label-text">Spécialité</label>
                                        <div class="form-group user-chosen-select-container">
                                            {{ form_widget(informationForm.skill, {'attr': {'class': 'user-chosen-select'} }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="input-box">
                                        <label class="label-text d-flex align-items-center">Compétences</label>
                                        <div class="form-group user-chosen-select-container">
                                            {{ form_widget(informationForm.category_professionals, {'attr': {'class': 'user-chosen-select'} }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="input-box">
                                        <label class="label-text d-flex align-items-center">Langues</label>
                                        <div class="form-group user-chosen-select-container">
                                            {{ form_widget(informationForm.languages, {'attr': {'class': 'user-chosen-select'} }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="input-box">
                                        <label class="label-text">Courte Description</label>
                                        <div class="form-group">
                                            {{ form_widget(informationForm.short_description, {'required': false, 'attr': {'class': 'message-control form-control user-text-editor'} }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="input-box">
                                        <label class="label-text">Longue Description</label>
                                        <div class="form-group">
                                            {{ form_widget(informationForm.description, {'required': false, 'attr': {'class': 'message-control form-control user-text-editor'} }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="submit-wrap pt-3">
                                    <div class="btn-box mt-3 ml-3">
                                        <button type="submit" class="theme-btn gradient-btn border-0">Enregistrer</button>
                                    </div>
                                </div>
                            {{ form_end(informationForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block stylesheets %}
    {% embed "front/partials/stylesheets.html.twig" %}
        {% block stylesheets_content %}
            {{ parent() }}
            <link rel="stylesheet" href="{{ asset('assets/front/css/jquery-te-1.4.0.css') }}">
        {% endblock %}
    {% endembed %}
{% endblock %}
{% block javascripts %}
    {% embed "front/partials/javascripts.html.twig" %}
        {% block javascripts_content %}
            {{ parent() }}
            <script src="{{ asset('assets/front/js/jquery-te-1.4.0.min.js') }}"></script>
            <script src="{{ asset('assets/front/js/jquery.MultiFile.min.js') }}"></script>
            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAYzby4yYDVaXPmtu4jZAGR258K6IYwjIY&libraries"></script>
            <script src="{{ asset('assets/front/js/map-add.js') }}"></script>
        {% endblock %}
    {% endembed %}
{% endblock %}