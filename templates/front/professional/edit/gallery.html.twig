{% extends 'front/layout.html.twig' %}

{% block title %}{{ 'Modification - '~ parent() }}{% endblock %}

{% block content %}
    {% embed "front/partials/breadcrumb.html.twig" %}
        {% block breadcrumb_heading %}
            <div class="section-heading">
                <h2 class="sec__title text-white font-size-40 mb-0">Modification</h2>
            </div>
        {% endblock %}
        {% block breadcrumb_links %}
            <li>Modification</li>
        {% endblock %}
    {% endembed %}
    <section class="add-listing-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 mx-auto">
                    {% embed "front/partials/professional/edit/breadcrumb.html.twig" %}
                        {% block breadcrumb_gallery %}
                            <a class="active" href="javascript:void(0)">Gallerie</a>
                        {% endblock %}
                    {% endembed %}
                    <div class="block-card mb-4">
                        <div class="block-card-header">
                            <h2 class="widget-title">Gallerie</h2>
                            <div class="stroke-shape"></div>
                        </div>
                        <div class="block-card-body">
                            {{ form_start(galleryForm, {'method': 'post', 'attr': {'id': 'gallery-form', 'class': 'form-box row'} }) }}
                                <div class="col-lg-12 custom-checkbox">
                                    {{ form_widget(galleryForm.videoType) }}
                                </div>
                                <div class="col-lg-12">
                                    <div class="input-box">
                                        <label class="label-text">Lien</label>
                                        <div class="form-group">
                                            <span class="la la-link form-icon"></span>
                                            {{ form_widget(galleryForm.videoUrl, {'required': false, 'attr': {'class': 'form-control', 'placeholder': 'Entrer votre lien'} }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="input-box">
                                        <label class="label-text">Gallerie d'Images</label>
                                        <div class="file-upload-wrap">
                                            {{ form_widget(galleryForm.gallerie, {'attr': {'class': 'file-upload-input with-preview'} }) }}
                                            <span class="file-upload-text"><i class="la la-upload mr-2"></i>Drop files here or click to upload</span>
                                        </div>
                                    </div>                                    
                                </div>
                                <div class="submit-wrap pt-3">
                                    <div class="btn-box mt-3 ml-3">
                                        <button type="submit" class="theme-btn gradient-btn border-0">Enregistrer</button>
                                    </div>
                                </div>
                            {{ form_end(galleryForm) }}
                        </div>
                    </div>
                    {% if app.user.professional.galleries|length > 0 %}
                        <div class="block-card mb-4">
                            <div class="block-card-header">
                                <h2 class="widget-title">Images</h2>
                                <div class="stroke-shape"></div>
                            </div>
                        </div>
                        <div class="block-card-body">
                            <div class="card">
                                <div class="card-body row">
                                    {% for gallery in app.user.professional.galleries %}
                                        <div class="col-lg-6 responsive-column">
                                            <div class="gallery">
                                                <a href="{{ path('app_professional_gallery_image_delete', {'id':gallery.id})}}" data-delete data-token="{{ csrf_token('delete'~ gallery.id) }}" class="d-inline-block">Supprimer</a>
                                                <img src="{{ vich_uploader_asset(gallery, 'imageFile')|imagine_filter('gallery') }}" class="lazy" alt="{{ gallery.image|e }}">
                                            </div>    
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block stylesheets %}
    {% embed "front/partials/stylesheets.html.twig" %}
        {% block stylesheets_content %}
            {{ parent() }}
            <link rel="stylesheet" href="{{ asset('assets/front/css/jquery-te-1.4.0.css') }}">
        {% endblock %}
    {% endembed %}
{% endblock %}
{% block javascripts %}
    {% embed "front/partials/javascripts.html.twig" %}
        {% block javascripts_content %}
            {{ parent() }}
            <script src="{{ asset('assets/front/js/jquery-te-1.4.0.min.js') }}"></script>
            <script src="{{ asset('assets/front/js/jquery.MultiFile.min.js') }}"></script>
            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAYzby4yYDVaXPmtu4jZAGR258K6IYwjIY&libraries"></script>
            <script src="{{ asset('assets/front/js/map-add.js') }}"></script>
        {% endblock %}
    {% endembed %}
{% endblock %}