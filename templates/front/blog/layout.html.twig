{% extends 'front/layout.html.twig' %}

{% block title %}{{ 'Blog - '~ parent() }}{% endblock %}

{% block content %}
    {% block breadcrumb_blog_area %}{% endblock %}
    {% block blog_article %}
        <section class="blog-area section-padding">
            <div class="container">
                <div class="row">
                    {% block articles %}{% endblock %}
                </div>
                <div class="row">
                    <div class="col-lg-12 pt-3 text-center">
                        {% block paginator_blog %}{% endblock %}
                    </div>
                </div>
            </div>
        </section>
    {% endblock %}
{% endblock %}